<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="AirBNB Automation Suite" verbose="1" parallel="false">

    <!-- Listener: ghi log, screenshot, và ExtentReport -->
    <listeners>
        <listener class-name="listener.SimpleListeners"/>
        <listener class-name="listener.ExtentReportListener"/>
    </listeners>

    <!-- Test đăng nhập -->
    <test name="Login Tests">
        <classes>
            <class name="scripts.LoginTest"/>
        </classes>
    </test>

    <!-- Test đăng ký -->
    <test name="Register Tests">
        <classes>
            <class name="scripts.RegisterTest"/>
        </classes>
    </test>

    <!-- Test đặt phòng -->
    <test name="Booking Tests">
        <classes>
            <class name="scripts.BookingTest"/>
        </classes>
    </test>

    <!-- Test đăng xuất -->
    <test name="Signout Tests">
        <classes>
            <class name="scripts.SignoutTest"/>
        </classes>
    </test>

</suite>
